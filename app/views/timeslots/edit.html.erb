<h1>Edit Timeslot</h1>

<%= form_with model: @timeslot, url: cinema_timeslot_path(@cinema, @timeslot), local: true do |form| %>
  <% if @timeslot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@timeslot.errors.count, "error") %> prohibited this timeslot from being saved:</h2>

      <ul>
        <% @timeslot.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :start_time %>
  <%= form.select :start_time, [['10AM', '10:00'], ['2PM', '14:00'], ['6PM', '18:00'], ['10PM', '22:00']], selected: @timeslot.start_time.strftime('%-I%p') %>

  <%= form.label :end_time %>
  <%= form.select :end_time, [['10AM', '10:00'], ['2PM', '14:00'], ['6PM', '18:00'], ['10PM', '22:00'], ['12AM', '24:00']], selected: @timeslot.end_time.strftime('%-I%p') %>

  <div class="field">
    <%= form.label :movie_id %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, selected: @timeslot.movie_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', cinema_timeslot_path(@cinema, @timeslot) %>
